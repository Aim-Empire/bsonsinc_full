generator client { provider = "prisma-client-js" }
datasource db { provider = env("DATABASE_PROVIDER") url = env("DATABASE_URL") }

model Job {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  department   String
  location     String
  type         String
  level        String
  salaryMin    Int?
  salaryMax    Int?
  currency     String?
  description  String
  requirements String
  benefits     String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  applications Application[]
}

model Application {
  id          String   @id @default(cuid())
  jobId       String
  job         Job      @relation(fields: [jobId], references: [id])
  fullName    String
  email       String
  phone       String?
  location    String?
  linkedin    String?
  portfolio   String?
  resumeUrl   String?
  coverLetter String?
  status      String   @default("received")
  createdAt   DateTime @default(now())
}

model Donation {
  id          String   @id @default(cuid())
  name        String?
  email       String?
  amount      Int
  currency    String
  interval    String
  message     String?
  provider    String
  providerRef String?
  status      String   @default("initialized")
  createdAt   DateTime @default(now())
}
